{
   "compilerOptions": {
     "lib": ["es6"],
     "target": "es6",
     "module": "CommonJS",
     "moduleResolution": "node",
     "outDir": "dist",
     "resolveJsonModule": true,
     "emitDecoratorMetadata": true,
     "esModuleInterop": true,
     "experimentalDecorators": true,
     "sourceMap": true
   },
   "include": ["**/*"],
   "exclude": ["node_modules", "*/*.spec.ts"]
 }